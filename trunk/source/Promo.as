 bytesTotal:Number):Void {				//trace("progress "+bytesLoaded);		}		this.__mcImageLoader.addListener(loadImageListener);	}		private function imageLoaded():Void {		//trace("IMAGE LOADED " + this);		// this tweens em all in .. .?  move this		Tweener.addTween(this, {_alpha:100, delay:1, time:1.1, transition:"easeOut"});	}				private function onRollOver(){		//this.headline_tf.setTextFormat(OVER);		gotoAndPlay("over");		//trace(this._name+" over");	}	private function onRollOut(){		//this.headline_tf.setTextFormat(OFF);		gotoAndPlay("off");				//trace(this._name+" and out");	}	private function onPress(){		// trace(this._name+":  press : "+ launchType + " :: " + launchName);		if(launchType=="section"){			BroadCaster.broadcastEvent("launchNewPage", launchName , false);						var nameObj:Object = new Object(); 			nameObj = launchName;			BroadCaster.broadcastEvent("updateHotSection", nameObj, false);		}else if(launchType == "url"){			getURL(launchName, "_blank");		}else{			// trace("NO WHERE TO GO");		}							}	private function onRelease(){		//trace(this._name+" release");	}	}